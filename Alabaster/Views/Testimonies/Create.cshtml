@{
    ViewBag.Title = "Share Your Testimony";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
<style>
/* ===== BASE STYLING ===== */
html, body {
    height: 100%;
    margin: 0;
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    color: #fff;
}

body {
    background: url('../images/cross7.png') center -10% / cover no-repeat fixed;
    overflow-x: hidden;
    position: relative;
}

body::before {
    content: "";
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.35);
    z-index: 0;
}

/* ===== CONTAINER ===== */
.create-page-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 90vh;
    padding: 2rem;
    position: relative;
    z-index: 2;
    opacity: 0;
    transform: translateY(40px);
    animation: fadeInUp 1.2s ease-out forwards;
}

/* ===== CARD ===== */
.create-testimony-form {
    width: 100%;
    max-width: 660px;
    padding: 2.5rem 2rem;
    background: rgba(0, 0, 0, 0.8); 
    border-radius: 1.5rem;
    backdrop-filter: blur(20px) saturate(180%);
    box-shadow: 0 0 40px rgba(255,215,0,0.3);
    border: 1px solid rgba(255,215,0,0.15);
    position: relative;
    transform: scale(1.1);
    transform-origin: top center;
}

/* GOLDEN LIGHT SWEEP */
.create-testimony-form::before {
    content: "";
    position: absolute;
    top: 0; left: -75%;
    width: 50%;
    height: 100%;
    background: linear-gradient(120deg, transparent, rgba(255,215,0,0.3), transparent);
    animation: lightSweep 6s infinite linear;
}

/* ===== HEADER ===== */
.create-testimony-form h2 {
    text-align: center;
    font-size: 2.4rem;
    font-weight: 900;
    margin-bottom: 2rem;
    text-transform: uppercase;
    background: linear-gradient(90deg, #FFD700, #fff, #FFD700);
    -webkit-background-clip: text;
    color: transparent;
    animation: shimmer 4s linear infinite;
    text-shadow: 0 0 25px rgba(255,255,255,0.4);
}

/* ===== FORM ELEMENTS ===== */
.form-group {
    margin-bottom: 1.5rem;
    animation: fadeIn 1s ease both;
}

label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #FFD700;
    font-size: 1rem;
}

.form-group input,
.form-group textarea,
.form-group input[type="file"] {
    width: 100%;
    padding: 0.8rem 1rem;
    font-size: 1rem;
    border-radius: 0.5rem;
    outline: none;
    border: 1px solid rgba(255,255,255,0.2);
    background: rgba(0,0,0,0.3);
    color: #fff;
    transition: all 0.3s ease;
}

.form-group input::placeholder,
.form-group textarea::placeholder {
    color: #FFD700;
    opacity: 0.7;
}

/* ===== SUBMIT BUTTON ===== */
.btn-submit {
    width: 100%;
    padding: 0.9rem;
    font-size: 1rem;
    font-weight: 800;
    text-transform: uppercase;
    border: none;
    border-radius: 0.6rem;
    color: #000;
    background: linear-gradient(90deg, #FFD700, #FFB700, #FFD700);
    background-size: 200% auto;
    animation: shimmer 5s linear infinite;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 1.5rem;
}

.btn-submit:hover {
    transform: scale(1.05);
    box-shadow: 0 0 25px rgba(255,215,0,0.6);
}

/* ===== ANIMATIONS ===== */
@@keyframes fadeInUp {
    0% { opacity: 0; transform: translateY(40px); }
    100% { opacity: 1; transform: translateY(0); }
}
@@keyframes shimmer {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
}
@@keyframes lightSweep {
    0% { left: -75%; }
    100% { left: 125%; }
}
</style>
}

<div class="create-page-container">
    <div class="create-testimony-form">
        <h2>Share Your Testimony</h2>

        <form asp-controller="Testimonies" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Title">Title</label>
                <input id="Title" name="Title" type="text" required placeholder="Give your testimony a title" />
            </div>

            <div class="form-group">
                <label for="Name">Your Name</label>
                <input id="Name" name="CreatedBy" type="text" required placeholder="Enter your name" />
            </div>

            <div class="form-group">
                <label for="ImageUpload">Upload Image (optional)</label>
                <input id="ImageUpload" name="ImageUpload" type="file" accept="image/*" />
            </div>

            <div class="form-group">
                <label for="Description">Your Testimony</label>
                <textarea id="Description" name="Description" required placeholder="Share what the Lord has done for you"></textarea>
            </div>

            <button type="submit" class="btn-submit">Submit Testimony</button>
        </form>
    </div>
</div>
