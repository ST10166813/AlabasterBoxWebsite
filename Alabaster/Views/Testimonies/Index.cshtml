@model IEnumerable<Alabaster.Models.Testimony>
@{
    ViewBag.Title = "Testimonies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
<style>
html, body {
    height: 100%;
    margin: 0;
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    color: #fff;
}

/* Background and structure */
body {
    background: url('../images/cross7.png') center -10% / cover no-repeat fixed;
    overflow-x: hidden;
    position: relative;
}
html, body {
    min-height: 100%;
    display: flex;
    flex-direction: column;
}
.page-content {
    flex: 1 0 auto;
    padding-bottom: 4rem;
}
footer {
    flex-shrink: 0;
}

/* Overlay */
body::before {
    content: "";
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.35);
    z-index: 0;
}

/* Page container */
.page-content {
    padding: 6rem 2rem 6rem;
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
}

/* HERO SECTION */
.hero {
    text-align: center;
    margin-bottom: 4rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
}

/* GOLDEN SHIMMER TITLE */
.hero h1 {
    font-size: 3.8rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 2px;
    padding: 1rem 2rem;
    border-radius: 20px;
    background: rgba(0,0,0,0.6);
    border: 2px solid #FFD700;
    box-shadow: 0 0 20px #FFD700, 0 0 50px rgba(255,215,0,0.5);
    backdrop-filter: blur(10px);
    position: relative;
    z-index: 2;
    transition: all 0.3s ease;

    /* Shimmer text effect */
    background-image: linear-gradient(90deg, #FFD700, #ffffff, #FFD700);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-size: 200% auto;
    animation: shimmer 5s linear infinite;
    text-shadow: 0 0 35px rgba(255, 255, 255, 0.4);
}

.hero h1:hover {
    transform: scale(1.05);
    box-shadow: 0 0 40px #FFD700, 0 0 80px rgba(255,215,0,0.6);
}

@@keyframes shimmer {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
}

/* HERO CTA */
.hero a.hero-cta {
    display: inline-block;
    margin-top: 1rem;
    padding: 1rem 3rem;
    font-weight: 700;
    font-size: 1.3rem;
    border-radius: 50px;
    text-decoration: none;
    background: linear-gradient(135deg, #FFD700, #FFA500);
    color: #111;
    box-shadow: 0 0 25px #FFD700, 0 0 50px #FFA500;
    transition: all 0.3s ease;
}

.hero a.hero-cta:hover {
    transform: scale(1.1) rotate(-2deg);
    box-shadow: 0 0 40px #FFD700, 0 0 80px #FFA500;
    background: linear-gradient(135deg, #FFCC33, #FF9900);
}

/* SECTION TITLE */
.section-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: #FFD700;
    text-align: center;
    padding: 0.8rem 1.5rem;
    margin: 3rem auto 2rem;
    background: rgba(0,0,0,0.55);
    border: 2px solid #FFD700;
    border-radius: 20px;
    box-shadow: 0 0 15px #FFD700, 0 0 40px rgba(255,215,0,0.4);
    text-transform: uppercase;
    max-width: fit-content;
    backdrop-filter: blur(6px);
    transition: all 0.3s ease;
}
.section-title:hover {
    transform: scale(1.05);
    box-shadow: 0 0 35px #FFD700, 0 0 70px rgba(255,215,0,0.6);
}

/* Sparkles */
.sparkle {
    position: fixed;
    width: 3px;
    height: 3px;
    background: rgba(255,215,0,0.9);
    border-radius: 50%;
    pointer-events: none;
    z-index: 1;
    animation: sparkleAnim linear infinite;
}
@@keyframes sparkleAnim {
    0% { transform: translateY(0) scale(0.5); opacity: 0; }
    50% { transform: translateY(-25px) scale(1); opacity: 1; }
    100% { transform: translateY(-50px) scale(0.5); opacity: 0; }
}

/* TESTIMONY GRID */
.testimony-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
    padding: 0 2%;
}

/* TESTIMONY CARD */
.testimony-card {
    position: relative;
    background: rgba(0,0,0,0.65);
    backdrop-filter: blur(22px) saturate(180%);
    border-radius: 25px;
    border: 1px solid rgba(255,215,0,0.25);
    box-shadow: 0 20px 60px rgba(0,0,0,0.8);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 2rem 1.5rem;
    color: #fff;
    transition: all 0.5s ease;
    opacity: 0;
    transform: translateY(40px);
}
.testimony-card:hover {
    transform: translateY(-15px) scale(1.06);
    box-shadow: 0 25px 60px rgba(255,215,0,0.5);
    border-color: rgba(255,255,255,0.3);
}
.testimony-card img {
    width: 100%;
    border-radius: 15px;
    aspect-ratio: 4/3;
    object-fit: cover;
    margin-bottom: 1.2rem;
    transition: transform 0.4s ease, box-shadow 0.4s ease;
}
.testimony-card img:hover {
    transform: scale(1.08);
    box-shadow: 0 12px 25px rgba(255, 255, 255, 0.25);
}
.testimony-card h4 {
    font-size: 1.8rem;
    font-weight: 900;
    color: #FFD700;
    margin-bottom: 0.8rem;
    text-shadow: 0 0 15px rgba(0,0,0,0.7), 0 0 15px rgba(255,215,0,0.5);
}
.testimony-card p {
    font-size: 1.2rem;
    color: #eee;
    margin-bottom: 0.8rem;
    line-height: 1.7;
}
.testimony-card small {
    display: block;
    color: #ccc;
    font-size: 1rem;
    margin-top: 0.2rem;
}

/* NO TESTIMONIES MESSAGE */
.no-testimonies {
    grid-column: 1 / -1;
    text-align: center;
    font-size: 1.4rem;
    color: #FFCC33;
    margin: 2.5rem 0;
    text-shadow: 0 0 15px rgba(0,0,0,0.6), 0 0 8px rgba(255,204,51,0.5);
}

/* RESPONSIVE */
@@media (max-width: 992px) {
    .hero h1 { font-size: 3rem; padding: 0.8rem 1.5rem; }
    .section-title { font-size: 2rem; padding: 0.6rem 1rem; }
    .testimony-card h4 { font-size: 1.6rem; }
    .testimony-card p { font-size: 1.15rem; }
}
@@media (max-width: 768px) {
    .hero h1 { font-size: 2.3rem; padding: 0.5rem 1rem; }
    .section-title { font-size: 1.8rem; padding: 0.5rem 1rem; }
    .testimony-card h4 { font-size: 1.35rem; }
    .testimony-card p { font-size: 1.1rem; }
}
</style>
}

@section Scripts {
<script>
/* Animate cards on scroll */
const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
        if(entry.isIntersecting) {
            entry.target.style.opacity = 1;
            entry.target.style.transform = 'translateY(0)';
        }
    });
}, { threshold: 0.2 });

document.querySelectorAll('.testimony-card').forEach(card => observer.observe(card));

/* Sparkles */
function createSparkle() {
    const sparkle = document.createElement('div');
    sparkle.classList.add('sparkle');
    sparkle.style.left = Math.random() * window.innerWidth + 'px';
    sparkle.style.top = Math.random() * window.innerHeight + 'px';
    sparkle.style.width = sparkle.style.height = Math.random() * 3 + 2 + 'px';
    sparkle.style.animationDuration = (5 + Math.random() * 5) + 's';
    document.body.appendChild(sparkle);
    setTimeout(() => sparkle.remove(), 10000);
}
setInterval(createSparkle, 200);
</script>
}

<div class="page-content">
    <div class="hero">
        <h1>✨ Testimonies ✨</h1>
        <a asp-controller="Testimonies" asp-action="Create" class="hero-cta">Share Your Story</a>
    </div>

    <h2 class="section-title">Voices From Our Community</h2>

    <div class="testimony-grid">
        @if (!Model.Any())
        {
            <div class="no-testimonies">✨ No testimonies yet. Be the first to inspire others! ✨</div>
        }
        else
        {
            foreach (var item in Model.OrderByDescending(t => t.CreatedAt))
            {
                <div class="testimony-card">
                    <img src="@(string.IsNullOrEmpty(item.ImageBase64)
                        ? Url.Content("~/Images/Default%20image.png")
                        : $"data:image/jpeg;base64,{item.ImageBase64}")"
                         alt="Testimony Image" />
                    <h4>@item.Title</h4>
                    <p>@item.Description</p>
                    <small>By: @(string.IsNullOrEmpty(item.CreatedBy) ? "Anonymous" : item.CreatedBy)</small>
                    <small>Date: @item.CreatedAt</small>
                </div>
            }
        }
    </div>
</div>
