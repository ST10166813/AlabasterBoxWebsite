<style>
:root {
  --bg:#08090c;
  --ink:#f2f2f2;
  --muted:#cfcfd6;
  --glass-1: rgba(18,18,22,.55);
  --glass-2: rgba(18,18,22,.35);
  --glass-brd: rgba(255,255,255,.14);
  --gold:#FFD700;
  --shadow:0 24px 60px rgba(0,0,0,.55);
}

/* ===== Base ===== */
html, body {
  height: 100%;
  margin: 0;
  font-family: 'Poppins','Segoe UI',system-ui,-apple-system,sans-serif;
  color: var(--ink);
  background: var(--bg) url('../images/bible4.jpg') center 100% / cover no-repeat fixed;
  overflow-x: hidden;
  position: relative;
}
body::before {
  content: "";
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.45);
  z-index: 0;
}

/* ===== Wrapper (closer to navbar) ===== */
.center-wrapper {
  min-height: calc(100vh - 160px);
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 120px;
  padding-bottom: 60px;
  position: relative;
  z-index: 1;
}

/* ===== Card ===== */
.auth-card {
  width: min(620px, 94vw);
  padding: 2.6rem 2rem;
  border-radius: 20px;
  border: 1px solid var(--glass-brd);
  background: linear-gradient(180deg, var(--glass-1), var(--glass-2));
  box-shadow: var(--shadow);
  backdrop-filter: blur(18px) saturate(140%);
  -webkit-backdrop-filter: blur(18px) saturate(140%);
  animation: fadeInUp 0.8s ease-out forwards;
  text-align: center;
}
@@keyframes fadeInUp {
  from {opacity: 0; transform: translateY(40px);}
  to {opacity: 1; transform: translateY(0);}
}

/* ===== Heading ===== */
h1.page-title {
  text-transform: uppercase;
  letter-spacing: 1px;
  font-size: 1.9rem;
  font-weight: 900;
  color: #fff;
  text-shadow: 0 2px 6px rgba(0,0,0,.6);
  margin-bottom: .5rem;
}
p.page-sub {
  color: #e2e2e2;
  font-size: 1rem;
  margin-bottom: 1.8rem;
}

/* ===== Input ===== */
label {
  font-weight: 600;
  font-size: .95rem;
  color: #fff;
  text-align: left;
  display: block;
  margin-bottom: 6px;
}
.input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  gap: 10px;
  border: 1px solid rgba(255,255,255,.18);
  border-radius: 12px;
  background: linear-gradient(180deg, rgba(255,255,255,.10), rgba(255,255,255,.05));
  padding: 10px 14px;
  height: 48px;
  transition: all .25s ease;
}
.input-wrap:focus-within {
  border-color: rgba(255,215,0,.55);
  box-shadow: 0 0 12px rgba(255,215,0,.28);
  background: linear-gradient(180deg, rgba(255,255,255,.14), rgba(255,255,255,.06));
}
.input-icon {
  color: #fff;
  font-size: 1.1rem;
  opacity: .9;
}

/* Transparent, white input (no white box) */
.auth-card .form-control,
.auth-card input.form-control,
.auth-card textarea.form-control,
.auth-card select.form-control {
  flex: 1;
  background: transparent !important;
  color: #fff !important;
  border: 0 !important;
  outline: none !important;
  box-shadow: none !important;
  font-size: 1rem;
  padding: 8px 2px;
  caret-color: var(--gold);
}

/* White placeholders */
.auth-card .form-control::placeholder,
.auth-card .form-control::-webkit-input-placeholder,
.auth-card .form-control::-moz-placeholder,
.auth-card .form-control:-ms-input-placeholder,
.auth-card .form-control::-ms-input-placeholder {
  color: #fff !important;
  opacity: 0.8;
}

/* Remove blue outline */
.auth-card input:focus,
.auth-card textarea:focus,
.auth-card select:focus {
  outline: none !important;
  box-shadow: none !important;
}

/* Kill Chrome autofill white background */
.auth-card input:-webkit-autofill,
.auth-card textarea:-webkit-autofill,
.auth-card select:-webkit-autofill {
  -webkit-text-fill-color: #fff !important;
  caret-color: var(--gold);
  transition: background-color 999999s ease-out, color 999999s ease-out;
  -webkit-box-shadow: 0 0 0px 1000px transparent inset !important;
  box-shadow: 0 0 0px 1000px transparent inset !important;
}

/* ===== Buttons ===== */
.btn-primary {
  display: block;
  width: 100%;
  margin-top: 1.4rem;
  background: linear-gradient(135deg, var(--gold), #FFB700, var(--gold));
  color: #181818;
  font-weight: 800;
  font-size: 1rem;
  border: 1px solid rgba(255,215,0,.4);
  border-radius: 12px;
  padding: 12px 16px;
  box-shadow: 0 10px 26px rgba(255,215,0,.25);
  transition: transform .2s ease, box-shadow .2s ease;
}
.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 18px 36px rgba(255,215,0,.35);
}
.btn-alt {
  display: block;
  width: 100%;
  margin-top: 0.8rem;
  background: transparent;
  color: var(--gold);
  font-weight: 700;
  font-size: 0.95rem;
  border: none;
  text-decoration: none;
  transition: color .2s ease;
}
.btn-alt:hover {
  color: #fff;
  text-decoration: underline;
}

/* ===== Alerts ===== */
.alert {
  background: rgba(46,204,113,.15);
  border: 1px solid rgba(46,204,113,.3);
  color: #e9ffe9;
  padding: 10px 12px;
  border-radius: 10px;
  margin-bottom: 12px;
  animation: fadeIn 0.6s ease forwards;
}
.alert-danger {
  background: rgba(255,77,77,.15);
  border: 1px solid rgba(255,77,77,.3);
  color: #ffe2e2;
}
</style>

<div class="center-wrapper">
  <div class="auth-card">
    <h1 class="page-title">Forgot Password</h1>
    <p class="page-sub">Enter your email below to receive a reset link.</p>

    @if (!string.IsNullOrEmpty(ViewBag.Message as string))
    {
        <div class="alert">@ViewBag.Message</div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.Error as string))
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form method="post">
      <label for="email">Email Address</label>
      <div class="input-wrap">
        <i class="bi bi-envelope input-icon"></i>
        <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email address" required />
      </div>

      <button type="submit" class="btn-primary">Send Reset Link</button>
      <a href="/Auth/Login" class="btn-alt">Back to Login</a>
    </form>
  </div>
</div>
