@section Styles {
<style>
/* ===== BASE STYLING ===== */
html, body {
    height: 100%;
    margin: 0;
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    color: #fff;
}

body {
    /* Updated background image */
    background: url('../images/cross7.png') center -10% / cover no-repeat fixed;
    overflow-x: hidden;
    position: relative;
}

/* Updated cinematic page overlay */
body::before {
    content: "";
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.35);
    z-index: 0;
}

/* ===== PAGE CONTAINER ===== */
.prayer-form-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 90vh;
    padding: 2rem;
    position: relative;
    z-index: 2;
    opacity: 0;
    transform: translateY(40px);
    animation: fadeInUp 1.2s ease-out forwards;
}

/* ===== FORM CARD ===== */
.prayer-form {
    width: 100%;
    max-width: 660px;
    padding: 2.5rem 2rem;
    /* Darker background */
    background: rgba(0, 0, 0, 0.8); 
    border-radius: 1.5rem;
    backdrop-filter: blur(20px) saturate(180%);
    box-shadow: 0 0 40px rgba(255,215,0,0.3);
    border: 1px solid rgba(255,215,0,0.15);
    position: relative;
    overflow: hidden;

    /* SCALE ENTIRE CARD BY 10% */
    transform: scale(1.1);
    transform-origin: top center;
}


/* GOLDEN LIGHT SWEEP */
.prayer-form::before {
    content: "";
    position: absolute;
    top: 0; left: -75%;
    width: 50%;
    height: 100%;
    background: linear-gradient(120deg, transparent, rgba(255,215,0,0.3), transparent);
    animation: lightSweep 6s infinite linear;
}

/* ===== HEADER ===== */
.prayer-form h2 {
    text-align: center;
    font-size: 2.4rem;
    font-weight: 900;
    letter-spacing: 1px;
    margin-bottom: 2rem;
    text-transform: uppercase;
    background: linear-gradient(90deg, #FFD700, #fff, #FFD700);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-size: 200% auto;
    animation: shimmer 4s linear infinite;
    text-shadow: 0 0 25px rgba(255,255,255,0.4);
}

/* ===== FORM ELEMENTS ===== */
.form-group {
    margin-bottom: 1.5rem;
    animation: fadeIn 1s ease both;
}

.form-group:nth-child(odd) { animation-delay: 0.3s; }
.form-group:nth-child(even) { animation-delay: 0.6s; }

label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #FFD700;
    font-size: 1rem;
}

.form-control, textarea {
    width: 100%;
    padding: 0.8rem 1rem;
    font-size: 1rem;
    border-radius: 0.5rem;
    outline: none;
    border: 1px solid rgba(255,255,255,0.2);
    background: rgba(0,0,0,0.3);
    color: #fff;
    transition: all 0.3s ease;
}

.form-control::placeholder,
textarea::placeholder {
    color: #FFD700;
    opacity: 0.7;
}

.form-control:focus, textarea:focus {
    border-color: #FFD700;
    box-shadow: 0 0 10px rgba(255,215,0,0.4);
}

/* ===== SUBMIT BUTTON ===== */
.btn-submit {
    width: 100%;
    padding: 0.9rem;
    font-size: 1rem;
    font-weight: 800;
    text-transform: uppercase;
    border: none;
    border-radius: 0.6rem;
    color: #000;
    background: linear-gradient(90deg, #FFD700, #FFB700, #FFD700);
    background-size: 200% auto;
    animation: shimmer 5s linear infinite;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 1.5rem;
}

.btn-submit:hover {
    transform: scale(1.05);
    box-shadow: 0 0 25px rgba(255,215,0,0.6);
}

/* ===== ANIMATIONS ===== */
@@keyframes fadeInUp {
    0% { opacity: 0; transform: translateY(40px); }
    100% { opacity: 1; transform: translateY(0); }
}

@@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

@@keyframes shimmer {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
}

@@keyframes lightSweep {
    0% { left: -75%; }
    100% { left: 125%; }
}

/* ===== FLOATING PARTICLES ===== */
.sparkle {
    position: fixed;
    width: 3px;
    height: 3px;
    background: rgba(255,215,0,0.9);
    border-radius: 50%;
    box-shadow: 0 0 8px rgba(255,215,0,0.8);
    pointer-events: none;
    animation: sparkleAnim linear infinite;
    z-index: 1;
}

@@keyframes sparkleAnim {
    0% { transform: translateY(0) scale(0.5); opacity: 0; }
    50% { transform: translateY(-25px) scale(1); opacity: 1; }
    100% { transform: translateY(-50px) scale(0.5); opacity: 0; }
}

@@media (max-width: 768px) {
    .prayer-form h2 { font-size: 1.8rem; }
}
</style>
}

<div class="prayer-form-container">
    <div class="prayer-form">
        <h2>üôè Submit a Prayer Request üôè</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert-success">@TempData["Success"]</div>
        }

        <form asp-action="Submit" method="post" class="mt-3">
            <div class="form-group">
                <label>Your Name</label>
                <input type="text" name="name" class="form-control" placeholder="Enter your name" required />
            </div>

            <div class="form-group">
                <label>Your Prayer Request</label>
                <textarea name="request" class="form-control" rows="4" placeholder="Write your prayer here..." required></textarea>
            </div>

            <button type="submit" class="btn-submit">Send Request</button>
            
        </form>
     @if (Model != null && !string.IsNullOrEmpty(Model.Response))
{
    <div class="alert alert-success mt-3">
        <strong>Admin‚Äôs Reply:</strong> @Model.Response
    </div>
}
    </div>
</div>

@section Scripts {
<script>
/* Floating sparkles */
function createSparkle() {
    const sparkle = document.createElement('div');
    sparkle.classList.add('sparkle');
    sparkle.style.left = Math.random() * window.innerWidth + 'px';
    sparkle.style.top = Math.random() * window.innerHeight + 'px';
    sparkle.style.animationDuration = (2 + Math.random() * 3) + 's';
    document.body.appendChild(sparkle);
    setTimeout(() => sparkle.remove(), 4000);
}
setInterval(createSparkle, 150);
</script>
} *@

@{
    ViewData["Title"] = "Prayer Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"/>

@section Styles {
<style>
:root{
  --bg:#08090c;
  --ink:#f2f2f2;
  --muted:#cfcfd6;
  --glass-1: rgba(18,18,22,.55);
  --glass-2: rgba(18,18,22,.35);
  --glass-brd: rgba(255,255,255,.14);
  --gold:#FFD700;
  --gold-ink:#181818;
  --shadow:0 24px 60px rgba(0,0,0,.55);
}

/* ===== Base ===== */
html, body{
  margin:0;
  font-family:'Poppins','Segoe UI',system-ui,-apple-system,sans-serif;
  color:var(--ink);
  min-height:100vh;
  overflow-x:hidden;
  background: var(--bg) url('../images/cross7.png') center -10% / cover no-repeat fixed;
}

/* ===== Hero Title (like About Us) ===== */
.hero-title{
  text-align:center;
  padding: clamp(100px, 12vh, 160px) 20px 48px;
  position:relative;
  z-index:1;
}
.hero-title::before{
  content:"";
  position:absolute; inset:0; z-index:-1;
  background: rgba(0,0,0,.42);
  backdrop-filter: blur(3px);
}
.hero-title h1{
  font-size: clamp(2.4rem, 4vw, 3.6rem);
  font-weight:900; text-transform:uppercase; letter-spacing:2px;
  background: linear-gradient(90deg, var(--gold), #fff, var(--gold));
  -webkit-background-clip:text; background-clip:text; color:transparent;
  text-shadow:0 0 34px rgba(255,255,255,.32);
  background-size:200% auto; animation: shimmer 6s linear infinite;
}
.hero-title p{
  font-size:1.08rem; color:#e6e6ef; opacity:.92;
  max-width:760px; margin: 10px auto 0;
}
@@keyframes shimmer{ 0%{background-position:0% 50%} 100%{background-position:200% 50%} }

/* ===== Page Section ===== */
.page-wrap{
  position:relative;
  padding: clamp(36px, 5vh, 70px) 18px 90px;
}

/* ===== Card (matches other pages) ===== */
.prayer-card{
  width:min(980px, 94vw);
  margin:0 auto;
  padding: clamp(18px, 2.2vw, 28px);
  border-radius:22px;
  border:1px solid var(--glass-brd);
  background: linear-gradient(180deg, var(--glass-1), var(--glass-2));
  backdrop-filter: blur(14px) saturate(140%);
  -webkit-backdrop-filter: blur(14px) saturate(140%);
  box-shadow: var(--shadow);
}

/* ===== Card Header ===== */
h2.page-title{
  margin:0;
  text-align:center;
  font-size: clamp(1.6rem, 2.2vw, 2.1rem);
  font-weight:900;
  background: linear-gradient(90deg, var(--gold), #ffffff 45%, #c6c6c6);
  -webkit-background-clip:text; background-clip:text; color:transparent;
  text-shadow:0 0 18px rgba(255,255,255,.18);
}
.subtitle{
  text-align:center; margin-top:4px; color:#dcdce5; opacity:.9; font-size:.98rem;
}

/* Divider */
.hr{
  height:1px; margin: 12px 0 10px;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,.18), transparent);
  border:0;
}

/* ===== Form ===== */
.form-grid{
  display:grid; gap:14px; grid-template-columns: 1fr;
}
label{ font-weight:700; font-size:.95rem; color:#efefef; }

/* Input shell with icons */
.input-wrap{
  position:relative; display:flex; align-items:center; gap:10px;
  border:1px solid rgba(255,255,255,.14);
  background: linear-gradient(180deg, rgba(255,255,255,.08), rgba(255,255,255,.03));
  border-radius:14px; padding:10px 12px;
  transition: border-color .25s ease, box-shadow .25s ease, background .25s ease;
}
.input-wrap:focus-within{
  border-color: rgba(255,215,0,.55);
  box-shadow: 0 0 0 6px rgba(255,215,0,.10);
  background: linear-gradient(180deg, rgba(255,255,255,.12), rgba(255,255,255,.05));
}
.input-icon{ font-size:1.05rem; opacity:.9; }

.form-control, textarea.form-control{
  flex:1; border:0; outline:0; background:transparent!important;
  color:var(--ink)!important; font-size:1rem; padding:8px 4px;
  caret-color: var(--gold);
}
textarea.form-control{ resize:vertical; min-height:130px; }

/* Alerts */
.alert-success{
  background: rgba(46,204,113,.15);
  border:1px solid rgba(46,204,113,.3);
  color:#e9ffe9; padding:10px 12px; border-radius:10px; margin-bottom:12px;
}

/* ===== Buttons (primary + bottom alt) ===== */
.actions{ margin-top:14px; display:grid; gap:12px; }
.btn-primary{
  display:inline-flex; align-items:center; justify-content:center; gap:10px;
  background: linear-gradient(135deg, var(--gold), #FFB700, var(--gold));
  color: var(--gold-ink);
  border: 1px solid rgba(255,215,0,.5);
  border-radius: 12px;
  font-weight:900; font-size:.98rem;
  padding:12px 16px; width:100%;
  box-shadow:0 10px 26px rgba(255,215,0,.28);
  transition: transform .18s ease, box-shadow .18s ease, filter .18s ease;
}
.btn-primary:hover{ transform:translateY(-1px); box-shadow:0 16px 38px rgba(255,215,0,.38); filter:saturate(1.05); }

.hr-bottom{ height:1px; background:linear-gradient(90deg, transparent, rgba(255,255,255,.18), transparent); margin: 8px 0; }

.btn-alt{
  display:inline-flex; align-items:center; justify-content:center; gap:12px;
  background: linear-gradient(135deg, rgba(255,255,255,.10), rgba(255,255,255,.04));
  color:#fff; border:1px solid rgba(255,255,255,.18);
  border-radius:12px; font-weight:800; font-size:.96rem;
  padding:12px 16px; width:100%;
  box-shadow:0 10px 24px rgba(0,0,0,.28);
  transition: transform .18s ease, box-shadow .18s ease, filter .18s ease;
  text-decoration:none;
}
.btn-alt:hover{ transform:translateY(-1px); box-shadow:0 16px 36px rgba(0,0,0,.38); }
.meta-note{ text-align:center; font-size:.9rem; color:var(--muted); }
</style>
}

<!-- ===== Hero Title ===== -->
<section class="hero-title">
  <h1>Prayer Request</h1>
  <p>Share your request and our team will lift it up in prayer. You‚Äôre not alone‚Äîlet us stand with you.</p>
</section>

<!-- ===== Form Section ===== -->
<div class="page-wrap">
  <div class="prayer-card">
    <h2 class="page-title">Submit Your Request</h2>
    <p class="subtitle">Please provide your name and your prayer need below.</p>

    <hr class="hr"/>

    @if (TempData["Success"] != null)
    {
      <div class="alert-success">@TempData["Success"]</div>
    }

    <form asp-action="Submit" method="post" novalidate>
      <div class="form-grid">
        <!-- Name -->
        <div>
          <label>Your Name</label>
          <div class="input-wrap">
            <i class="bi bi-person input-icon"></i>
            <input type="text" name="name" class="form-control" placeholder="Enter your name" required />
          </div>
        </div>

        <!-- Request -->
        <div>
          <label>Your Prayer Request</label>
          <div class="input-wrap">
            <i class="bi bi-chat-dots input-icon"></i>
            <textarea name="request" class="form-control" rows="5" placeholder="Write your prayer here..." required></textarea>
          </div>
        </div>
      </div>

      <div class="actions">
        <button type="submit" class="btn-primary">
          <i class="bi bi-send-fill"></i> Send Request
        </button>

        <div class="hr-bottom"></div>

        <!-- Extra bottom action (keeps pages consistent) -->
        <a class="btn-alt" href="@Url.Action("Index","Prayer")">
          <i class="bi bi-journal-heart"></i> View Prayer Requests
        </a>

        <div class="meta-note">Need urgent support? <a href="@Url.Action("Contact","Home")" style="color:#fff; text-decoration:underline;">Contact our team</a></div>
      </div>
    </form>

    @* Optional admin reply block, styled to match alerts *@
    @if (Model != null && !string.IsNullOrEmpty(Model.Response))
    {
      <div class="alert-success" style="margin-top:12px;">
        <strong>Admin‚Äôs Reply:</strong> @Model.Response
      </div>
    }
  </div>
</div>
