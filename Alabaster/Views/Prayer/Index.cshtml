@{
    ViewData["Title"] = "Prayer Request";
}

@section Styles {
<style>
/* ===== BASE STYLING ===== */
html, body {
    height: 100%;
    margin: 0;
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    color: #fff;
}

body {
    /* Updated background image */
    background: url('../images/cross7.png') center -10% / cover no-repeat fixed;
    overflow-x: hidden;
    position: relative;
}

/* Updated cinematic page overlay */
body::before {
    content: "";
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.35);
    z-index: 0;
}

/* ===== PAGE CONTAINER ===== */
.prayer-form-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 90vh;
    padding: 2rem;
    position: relative;
    z-index: 2;
    opacity: 0;
    transform: translateY(40px);
    animation: fadeInUp 1.2s ease-out forwards;
}

/* ===== FORM CARD ===== */
.prayer-form {
    width: 100%;
    max-width: 660px;
    padding: 2.5rem 2rem;
    /* Darker background */
    background: rgba(0, 0, 0, 0.8); 
    border-radius: 1.5rem;
    backdrop-filter: blur(20px) saturate(180%);
    box-shadow: 0 0 40px rgba(255,215,0,0.3);
    border: 1px solid rgba(255,215,0,0.15);
    position: relative;
    overflow: hidden;

    /* SCALE ENTIRE CARD BY 10% */
    transform: scale(1.1);
    transform-origin: top center;
}


/* GOLDEN LIGHT SWEEP */
.prayer-form::before {
    content: "";
    position: absolute;
    top: 0; left: -75%;
    width: 50%;
    height: 100%;
    background: linear-gradient(120deg, transparent, rgba(255,215,0,0.3), transparent);
    animation: lightSweep 6s infinite linear;
}

/* ===== HEADER ===== */
.prayer-form h2 {
    text-align: center;
    font-size: 2.4rem;
    font-weight: 900;
    letter-spacing: 1px;
    margin-bottom: 2rem;
    text-transform: uppercase;
    background: linear-gradient(90deg, #FFD700, #fff, #FFD700);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-size: 200% auto;
    animation: shimmer 4s linear infinite;
    text-shadow: 0 0 25px rgba(255,255,255,0.4);
}

/* ===== FORM ELEMENTS ===== */
.form-group {
    margin-bottom: 1.5rem;
    animation: fadeIn 1s ease both;
}

.form-group:nth-child(odd) { animation-delay: 0.3s; }
.form-group:nth-child(even) { animation-delay: 0.6s; }

label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #FFD700;
    font-size: 1rem;
}

.form-control, textarea {
    width: 100%;
    padding: 0.8rem 1rem;
    font-size: 1rem;
    border-radius: 0.5rem;
    outline: none;
    border: 1px solid rgba(255,255,255,0.2);
    background: rgba(0,0,0,0.3);
    color: #fff;
    transition: all 0.3s ease;
}

.form-control::placeholder,
textarea::placeholder {
    color: #FFD700;
    opacity: 0.7;
}

.form-control:focus, textarea:focus {
    border-color: #FFD700;
    box-shadow: 0 0 10px rgba(255,215,0,0.4);
}

/* ===== SUBMIT BUTTON ===== */
.btn-submit {
    width: 100%;
    padding: 0.9rem;
    font-size: 1rem;
    font-weight: 800;
    text-transform: uppercase;
    border: none;
    border-radius: 0.6rem;
    color: #000;
    background: linear-gradient(90deg, #FFD700, #FFB700, #FFD700);
    background-size: 200% auto;
    animation: shimmer 5s linear infinite;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 1.5rem;
}

.btn-submit:hover {
    transform: scale(1.05);
    box-shadow: 0 0 25px rgba(255,215,0,0.6);
}

/* ===== ANIMATIONS ===== */
@@keyframes fadeInUp {
    0% { opacity: 0; transform: translateY(40px); }
    100% { opacity: 1; transform: translateY(0); }
}

@@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

@@keyframes shimmer {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
}

@@keyframes lightSweep {
    0% { left: -75%; }
    100% { left: 125%; }
}

/* ===== FLOATING PARTICLES ===== */
.sparkle {
    position: fixed;
    width: 3px;
    height: 3px;
    background: rgba(255,215,0,0.9);
    border-radius: 50%;
    box-shadow: 0 0 8px rgba(255,215,0,0.8);
    pointer-events: none;
    animation: sparkleAnim linear infinite;
    z-index: 1;
}

@@keyframes sparkleAnim {
    0% { transform: translateY(0) scale(0.5); opacity: 0; }
    50% { transform: translateY(-25px) scale(1); opacity: 1; }
    100% { transform: translateY(-50px) scale(0.5); opacity: 0; }
}

@@media (max-width: 768px) {
    .prayer-form h2 { font-size: 1.8rem; }
}
</style>
}

<div class="prayer-form-container">
    <div class="prayer-form">
        <h2>üôè Submit a Prayer Request üôè</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert-success">@TempData["Success"]</div>
        }

        <form asp-action="Submit" method="post" class="mt-3">
            <div class="form-group">
                <label>Your Name</label>
                <input type="text" name="name" class="form-control" placeholder="Enter your name" required />
            </div>

            <div class="form-group">
                <label>Your Prayer Request</label>
                <textarea name="request" class="form-control" rows="4" placeholder="Write your prayer here..." required></textarea>
            </div>

            <button type="submit" class="btn-submit">Send Request</button>
            
        </form>
     @if (Model != null && !string.IsNullOrEmpty(Model.Response))
{
    <div class="alert alert-success mt-3">
        <strong>Admin‚Äôs Reply:</strong> @Model.Response
    </div>
}
    </div>
</div>

@section Scripts {
<script>
/* Floating sparkles */
function createSparkle() {
    const sparkle = document.createElement('div');
    sparkle.classList.add('sparkle');
    sparkle.style.left = Math.random() * window.innerWidth + 'px';
    sparkle.style.top = Math.random() * window.innerHeight + 'px';
    sparkle.style.animationDuration = (2 + Math.random() * 3) + 's';
    document.body.appendChild(sparkle);
    setTimeout(() => sparkle.remove(), 4000);
}
setInterval(createSparkle, 150);
</script>
}
