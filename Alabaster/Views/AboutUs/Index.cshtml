@section Styles {
    <style>
        /* ------------------ TOKENS: match Events black-glass ------------------ */
        :root {
            --glass-start: rgba(16,16,20,.55);
            --glass-end: rgba(16,16,20,.38);
            --glass-border: rgba(255, 255, 255, 0.349);
            --glass-shadow: 0 40px 90px rgba(0,0,0,.45);
            --gold: #FFD700;
            --ink: #fff;
        }

        /* ------------------ RESET ------------------ */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html, body {
            font-family: 'Poppins', 'Segoe UI', system-ui, -apple-system, sans-serif;
            background: #08090c url('../images/cross7.png') center -10% / cover no-repeat fixed;
            color: var(--ink);
            min-height: 100vh;
            overflow-x: hidden;
        }

        a {
            color: inherit;
            text-decoration: none;
        }

        img {
            max-width: 100%;
            display: block;
        }

        /* ------------------ GLOBAL BACKDROPS ------------------ */
        .page-aurora {
            position: fixed;
            inset: -20vmax -10vmax -10vmax -10vmax;
            pointer-events: none;
            z-index: 0;
            filter: blur(40px) saturate(120%);
            background: radial-gradient(40vmax 40vmax at 15% 20%, rgba(255,215,0,.13), transparent 60%), radial-gradient(35vmax 35vmax at 85% 20%, rgba(0,114,255,.12), transparent 60%), radial-gradient(45vmax 45vmax at 50% 80%, rgba(0,255,188,.10), transparent 60%);
            opacity: .9;
        }

        .page-grain::before {
            content: "";
            position: fixed;
            inset: 0;
            z-index: 0;
            pointer-events: none;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="140" height="140" viewBox="0 0 140 140"><filter id="n"><feTurbulence baseFrequency="0.8" numOctaves="2" stitchTiles="stitch"/></filter><rect width="100%" height="100%" filter="url(%23n)" opacity="0.035"/></svg>');
            mix-blend-mode: soft-light;
        }

        /* ------------------ LAYOUT WRAPPER (WIDER) ------------------ */
        .about-wrap {
            position: relative;
            z-index: 1;
            display: grid;
            gap: clamp(2rem, 4vw, 3rem);
            padding: clamp(2.5rem, 5vw, 5rem) 1.25rem clamp(4rem, 7vw, 6rem);
            max-width: 1400px;
            margin-inline: auto;
        }

        /* ------------------ PAGE HEADING ------------------ */
        .page-head {
            display: grid;
            gap: .6rem;
            justify-items: center;
            text-align: center;
        }

           .page-head h1 {
  font-size: clamp(2.4rem, 5.6vw, 4.4rem);
  font-weight: 900;
  text-transform: uppercase;
  color: #fff;
  text-shadow: 0 2px 6px rgba(0, 0, 0, 0.55);
}


            .page-head .tagline {
                font-size: clamp(1rem, 1.6vw, 1.2rem);
                letter-spacing: .6px;
                opacity: .95;
            }

        @@keyframes hshimmer {
            from {
                background-position: 0% 50%
            }

            to {
                background-position: 200% 50%
            }
        }

        /* ------------------ INTRO ------------------ */
       .hero {
            display: grid;
            gap: 1.1rem;
            justify-items: center;
            text-align: center;

            /* Make text slightly larger and more comfortable */
            font-size: 1.12rem;       /* roughly +10% */
            line-height: 1.9;         /* add a bit of breathing room */
            max-width: 900px;         /* keep long lines readable */
            margin-inline: auto;
            }

        /* chip matches glass language */
        .badge {
            font-size: .85rem;
            letter-spacing: .4px;
            padding: .45rem .9rem;
            border-radius: 999px;
            border: 1px solid var(--glass-border);
            background: linear-gradient(180deg, var(--glass-start), var(--glass-end));
            backdrop-filter: blur(8px) saturate(140%);
        }

        /* ------------------ GLASS PANEL (MATCH EVENTS) ------------------ */
        .panel {
            border-radius: 28px;
            border: 1px solid var(--glass-border);
            background: linear-gradient(180deg, var(--glass-start), var(--glass-end));
            backdrop-filter: blur(14px) saturate(150%);
            -webkit-backdrop-filter: blur(14px) saturate(150%);
            box-shadow: var(--glass-shadow);
        }

        /* ------------------ HERO CARD WITH MEDIA ------------------ */
        .hero-card {
            display: grid;
            grid-template-columns: 1.2fr 1fr;
            gap: clamp(1rem, 2.8vw, 2.25rem);
            padding: clamp(1.25rem, 3.2vw, 2.5rem);
            align-items: start;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity .8s ease, transform .8s ease;
        }

            .hero-card.visible {
                opacity: 1;
                transform: translateY(0);
            }

        .hero-media {
            display: grid;
            gap: .9rem;
        }

            .hero-media .primary {
                height: clamp(240px, 32vh, 360px);
                border-radius: 18px;
                object-fit: cover;
                filter: brightness(.97) contrast(1.06);
                box-shadow: 0 16px 40px rgba(0,0,0,.5);
                transition: transform .35s ease, filter .35s ease;
            }

            .hero-media .thumbs {
                display: none;
            }

        .hero-content h2 {
            font-size: clamp(1.5rem, 2.4vw, 2.2rem);
            font-weight: 800;
            margin-bottom: .7rem;
        }

            .hero-content h2::after {
                content: "";
                display: block;
                width: 96px;
                height: 3px;
                margin-top: .55rem;
                border-radius: 3px;
                background: linear-gradient(90deg, #0a0a08, #0a0a08); /* subtle black accent */
            }

        .hero-content p {
            opacity: .96;
            line-height: 1.8;
            margin-top: .6rem;
        }

        .hero-actions {
            margin-top: 1rem;
            display: flex;
            gap: .6rem;
            flex-wrap: wrap;
        }

        .btn {
            padding: .7rem 1rem;
            border-radius: 12px;
            font-weight: 700;
            border: 1px solid rgba(255,255,255,.2);
            background: linear-gradient(180deg, rgba(255,255,255,.12), rgba(255,255,255,.04));
            transition: transform .2s ease, background .2s ease;
        }

            .btn:hover {
                transform: translateY(-2px);
                background: linear-gradient(180deg, rgba(255,255,255,.18), rgba(255,255,255,.06));
            }

        /* ------------------ STATS (3-up, NO ICONS) ------------------ */
        .stats-wrap {
            max-width: 1400px;
            margin-inline: auto;
        }

        .stats {
            display: grid;
            gap: clamp(1rem, 2vw, 1.4rem);
            grid-template-columns: repeat(3, minmax(0,1fr));
        }

        .stat {
            transform: translateY(18px);
            opacity: 0;
            transition: transform .7s cubic-bezier(.2,.65,.2,1), opacity .7s ease;
        }

            .stat.visible {
                transform: translateY(0);
                opacity: 1;
            }

        .stat-head {
            display: block;
            margin-bottom: .35rem;
        }

        .value {
            font-size: clamp(1.9rem, 3.4vw, 2.6rem);
            font-weight: 900;
            line-height: 1.1;
        }

        .label {
            margin-top: .25rem;
            font-size: .98rem;
            opacity: .9;
        }

        .progress {
            height: 4px;
            border-radius: 999px;
            background: rgba(255,255,255,.12);
            overflow: hidden;
            margin-top: .6rem;
        }

            .progress > i {
                display: block;
                width: 0%;
                height: 100%;
                background: linear-gradient(90deg, #0a0a08, #0a0a08);
                transition: width 1.2s cubic-bezier(.2,.65,.2,1);
            }

        /* ------------------ CONTACT PANEL (merged from Contact Us) ------------------ */
        .contact-panel {
            padding: clamp(1rem,2vw,1.4rem);
            display: grid;
            gap: .9rem;
            grid-template-columns: 1fr 1fr;
        }

        @@media (max-width: 900px) {
            .contact-panel {
                grid-template-columns: 1fr;
            }
        }

        .contact-block {
            background: rgba(255,255,255,.03);
            border-radius: 14px;
            padding: 16px;
            border: 1px solid rgba(255,255,255,.06);
        }

            .contact-block h3 {
                font-size: 1.05rem;
                color: var(--gold);
                margin-bottom: .45rem;
                display: flex;
                gap: .6rem;
                align-items: center
            }

        .kv {
            display: grid;
            grid-template-columns: auto 1fr;
            gap: .35rem .75rem;
            font-size: .95rem;
        }

        .social-row {
            display: flex;
            gap: .75rem;
            align-items: center;
            margin-top: .6rem
        }

        .social-icon {
            width: 38px;
            height: 38px;
            display: grid;
            place-items: center;
            border-radius: 50%;
            background: rgba(255,255,255,.06);
            border: 1px solid rgba(255,255,255,.12);
            transition: all .18s ease
        }

            .social-icon img {
                width: 20px;
                height: 20px;
                display: block
            }

            .social-icon:hover {
                background: var(--gold);
                color: #111;
                transform: translateY(-2px)
            }

        /* ------------------ QUOTE ------------------ */
        .quote.panel {
            padding: clamp(1rem, 2.5vw, 2rem);
            display: grid;
            gap: .6rem;
            text-align: center;
        }

        .quote p {
            font-size: clamp(1.05rem, 1.6vw, 1.25rem);
            opacity: .96;
        }

        .cite {
            opacity: .75;
            font-size: .95rem;
        }

        /* ------------------ RESPONSIVE ------------------ */
        @@media (max-width: 1100px) {
            .hero-card {
                grid-template-columns: 1fr;
            }
        }

        @@media (max-width: 900px) {
            .stats {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 520px) {
            .stats {
                grid-template-columns: 1fr;
            }
        }

        /* ------------------ REDUCED MOTION ------------------ */
        @@media (prefers-reduced-motion: reduce) {
            .hero-card, .stat {
                transition: none !important;
                transform: none !important;
                opacity: 1 !important;
            }

            .progress > i {
                transition: none !important;
                width: 100% !important;
            }
        }
    </style>
}


@section Scripts {
    <script>
        // ------------------ Reveal on enter ------------------
        const reveal = (el, threshold=0.2) => {
            const io = new IntersectionObserver((entries, obs) => {
                entries.forEach(e => {
                    if (e.isIntersecting) { e.target.classList.add('visible'); obs.unobserve(e.target); }
                });
            }, { threshold });
            io.observe(el);
        };

        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.hero-card').forEach(c => reveal(c, .2));
            document.querySelectorAll('.stat').forEach((s, i) => {
                s.style.transitionDelay = `${i * 120}ms`;
                reveal(s, .3);
            });
        });

        // ------------------ Count-up + bar fill ------------------
        function countUp(el){
            const target = +el.dataset.target;
            const suffix = el.dataset.suffix || "";
            const duration = 1400;
            const start = performance.now();
            const step = (now) => {
                const p = Math.min((now - start) / duration, 1);
                const eased = 1 - Math.pow(1 - p, 3);
                const val = Math.floor(target * eased);
                el.textContent = val.toLocaleString() + suffix;
                if (p < 1) requestAnimationFrame(step);
            };
            requestAnimationFrame(step);
        }

        const statsIO = new IntersectionObserver((entries, obs) => {
            entries.forEach(e => {
                if (!e.isIntersecting) return;
                const wrap = e.target;
                wrap.querySelectorAll('[data-target]').forEach(countUp);
                wrap.querySelectorAll('.stat').forEach(card => {
                    const v = card.querySelector('[data-target]');
                    const cap = +v.dataset.cap || +v.dataset.target;
                    const percent = Math.max(12, Math.min(100, Math.round((+v.dataset.target / cap) * 100)));
                    const bar = card.querySelector('.progress > i'); if (bar) bar.style.width = percent + '%';
                });
                obs.unobserve(wrap);
            });
        },{ threshold: .3 });

        document.addEventListener('DOMContentLoaded', () => {
            const statsWrap = document.querySelector('.stats-wrap');
            if (statsWrap) statsIO.observe(statsWrap);
        });
    </script>
}

