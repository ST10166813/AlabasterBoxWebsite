@section Scripts {
<script>
// ------------------ Reveal on enter ------------------
const reveal = (el, threshold=0.2) => {
    const io = new IntersectionObserver((entries, obs) => {
        entries.forEach(e => {
            if (e.isIntersecting) { e.target.classList.add('visible'); obs.unobserve(e.target); }
        });
    }, { threshold });
    io.observe(el);
};

document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.hero-card').forEach(c => reveal(c, .2));
    document.querySelectorAll('.stat').forEach((s, i) => {
        s.style.transitionDelay = `${i * 120}ms`;
        reveal(s, .3);
    });
});

// ------------------ Count-up + bar fill ------------------
function countUp(el){
    const target = +el.dataset.target;
    const suffix = el.dataset.suffix || "";
    const duration = 1400;
    const start = performance.now();
    const step = (now) => {
        const p = Math.min((now - start) / duration, 1);
        const eased = 1 - Math.pow(1 - p, 3);
        const val = Math.floor(target * eased);
        el.textContent = val.toLocaleString() + suffix;
        if (p < 1) requestAnimationFrame(step);
    };
    requestAnimationFrame(step);
}

const statsIO = new IntersectionObserver((entries, obs) => {
    entries.forEach(e => {
        if (!e.isIntersecting) return;
        const wrap = e.target;
        wrap.querySelectorAll('[data-target]').forEach(countUp);
        wrap.querySelectorAll('.stat').forEach(card => {
            const v = card.querySelector('[data-target]');
            const cap = +v.dataset.cap || +v.dataset.target;
            const percent = Math.max(12, Math.min(100, Math.round((+v.dataset.target / cap) * 100)));
            const bar = card.querySelector('.progress > i'); if (bar) bar.style.width = percent + '%';
        });
        obs.unobserve(wrap);
    });
},{ threshold: .3 });

document.addEventListener('DOMContentLoaded', () => {
    const statsWrap = document.querySelector('.stats-wrap');
    if (statsWrap) statsIO.observe(statsWrap);
});
</script>
}

