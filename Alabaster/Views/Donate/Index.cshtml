<script>
// Reveal form
requestAnimationFrame(()=> document.getElementById('donateCard')?.classList.add('visible'));

// Toggle Money fields + bank details
const typeSel = document.getElementById('DonationType');
const amountRow = document.getElementById('amountRow');
const bankBlock = document.getElementById('bankBlock');
function updateType(){
  const isMoney = typeSel?.value === 'Money';
  if(amountRow) amountRow.style.display = isMoney ? '' : 'none';
  if(bankBlock) bankBlock.style.display = isMoney ? '' : 'none';
}
typeSel?.addEventListener('change', updateType); updateType();

// Copy buttons
function copyText(text, btn){
  if(!navigator.clipboard){
    const ta=document.createElement('textarea'); ta.value=text; document.body.appendChild(ta);
    ta.select(); try{document.execCommand('copy')}catch(_){}
    ta.remove(); flash(btn); return;
  }
  navigator.clipboard.writeText(text).then(()=>flash(btn));
}
function flash(btn){
  if(!btn) return;
  const prev=btn.innerHTML;
  btn.innerHTML = '<i class="bi bi-check2"></i> Copied!'; btn.disabled = true;
  setTimeout(()=>{ btn.innerHTML=prev; btn.disabled=false; }, 1200);
}
document.querySelectorAll('.copy-btn').forEach(b=>{
  b.addEventListener('click', ()=> copyText(b.getAttribute('data-copy')||'', b));
});

// Scroll animation for the single card
const io = new IntersectionObserver((entries)=>{
  entries.forEach(entry=>{
    const el = entry.target;
    if(entry.isIntersecting){
      const delay = parseInt(el.getAttribute('data-delay')||'0',10);
      el.style.transitionDelay = (delay/1000)+'s';
      el.classList.add('inview');
    }else{
      el.classList.remove('inview');
    }
  });
},{ threshold:.2, rootMargin:'0px 0px -5% 0px' });

document.querySelectorAll('.info-card.reveal').forEach(el=> io.observe(el));
</script>
