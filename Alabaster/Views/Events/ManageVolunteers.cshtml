    background: rgba(0,0,0,0.25);
    color: #fff;
    cursor: pointer;
    transition: all 0.3s ease;
}

.event-select select:hover, .event-select select:focus {
    box-shadow: 0 0 18px rgba(255, 215, 0, 0.5);
    border-color: #FFD700;
}

