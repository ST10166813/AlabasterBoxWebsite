@model List<Alabaster.Models.Volunteer>

@{
    ViewData["Title"] = "Manage Volunteers";
}

@section Styles {
<style>
:root{
  --gold: #FFD700;
  --ink: #fff;
  --muted: #cfcfd6;
  --glass-1: rgba(51, 51, 51, 0.65);
  --glass-2: rgba(103, 103, 106, 0.45);
  --glass-brd: rgba(84, 83, 83, 0.41);
  --shadow: 0 25px 70px rgba(0,0,0,.55);
}

/* ===== Global background (NO tint, matches Manage Testimonies) ===== */
html, body{
  height:100%;
  margin:0;
  font-family:'Poppins','Segoe UI',sans-serif;
  color:var(--ink);
  background:#08090c url('../images/cross7.png') center -10% / cover no-repeat fixed;
  overflow-x:hidden; position:relative;
}
body::before{ content:""; display:none; }

/* ===== Container (same spacing system) ===== */
.page-content{
  position:relative; z-index:1;
  max-width:1400px; margin-inline:auto;
  padding: clamp(2.5rem, 6vw, 5rem) 1.25rem clamp(3rem, 7vw, 5rem);
}

/* ===== Heading & Subheading (identical to Manage Testimonies) ===== */
.page-head{
  display:grid; gap:.6rem; justify-items:center; text-align:center;
  margin-bottom: clamp(1.6rem, 3.2vw, 2.2rem);
}
.page-head h1 {
  font-size: clamp(2.4rem, 5.6vw, 4.4rem);
  font-weight: 900;
  line-height: 1.12;
  padding-bottom: 6px;
  letter-spacing: .3px;
  text-transform: uppercase;
  color: #fff;
  text-shadow: 0 2px 6px rgba(0, 0, 0, 0.55);
}

.tagline{
  font-size: clamp(.95rem, 1.6vw, 1.15rem);
  letter-spacing: .6px;
  color: var(--ink); opacity:.95;
  display:inline-flex; gap:.7rem; flex-wrap:wrap;
}

.head-desc{
  max-width: 920px; opacity:.92; text-align:center;
  font-size: clamp(1rem, 1.4vw, 1.12rem);
  margin: .6rem auto 0;
}
@@keyframes hshimmer { from{background-position:0% 50%} to{background-position:200% 50%} }

/* ===== Section title box (same component) ===== */
.section-title{
  font-size: clamp(1.6rem, 2.6vw, 2.2rem);
  font-weight: 900; text-align:center; margin: 1.8rem auto 2.2rem;
  padding: .9rem 1.6rem; text-transform: uppercase;
  background: linear-gradient(180deg, rgba(255, 215, 0, 0.15), rgba(255, 255, 255, 0.05));
  border: 1px solid rgba(240, 240, 235, 0.6);
  border-radius: 18px;
  box-shadow: 0 0 25px rgba(255, 215, 0, 0.35), 0 0 55px rgba(255, 215, 0, 0.25);
  backdrop-filter: blur(10px);
  background-image: linear-gradient(90deg, var(--ink), #ffffff 45%, var(--ink));
  -webkit-background-clip: text; background-clip: text; color: transparent;
  background-size: 200% auto; animation: sectionShimmer 6s linear infinite;
  letter-spacing: 1px; transition: transform .25s ease, box-shadow .25s ease;
}
.section-title:hover{ transform:scale(1.05); box-shadow: 0 0 40px rgba(255,215,0,.5), 0 0 90px rgba(255,215,0,.35); }
@@keyframes sectionShimmer { 0%{background-position:0% 50%} 100%{background-position:200% 50%} }

/* ===== Glass panel & controls (match) ===== */
.glass-panel{
  background: linear-gradient(180deg, var(--glass-1), var(--glass-2));
  border:1px solid var(--glass-brd);
  border-radius: 22px;
  box-shadow: var(--shadow);
  padding: clamp(1rem, 2.2vw, 1.75rem);
  backdrop-filter: blur(10px);
}
.controls{
  display:flex; justify-content:center; margin-bottom:1.25rem;
}
/* ===== Dropdown (glass style) ===== */
.event-select select {
  appearance: none;              /* Remove default arrow styling */
  -webkit-appearance: none;
  -moz-appearance: none;
  background: linear-gradient(180deg, rgba(255,255,255,.08), rgba(255,255,255,.03));
  color: #fff;
  padding: .77rem 1.1rem;
  font-size: 1.05rem;
  border-radius: 10px;
  border: 1px solid rgba(255, 215, 0, 0.45);
  cursor: pointer;
  width: 100%;
  transition: border-color .25s ease, box-shadow .25s ease, background .25s ease, transform .1s ease;
}

/* On hover or focus — gold shimmer effect */
.event-select select:hover,
.event-select select:focus {
  border-color: var(--gold);
  box-shadow: 0 0 16px rgba(255,215,0,.38);
  background: linear-gradient(180deg, rgba(255,255,255,.14), rgba(255,255,255,.05));
  outline: none;
}

/* Remove the ugly blue outline entirely */
.event-select select:focus-visible {
  outline: none !important;
  box-shadow: 0 0 16px rgba(255,215,0,.38);
}

/* ===== Placeholder / Default Option ===== */
.event-select select option {
  background: #08090c00;       /* Keeps dropdown dark */
  color: #000000;               /* White text inside dropdown */
}

/* Chrome autofill + Safari fixes */
.event-select select:-webkit-autofill {
  -webkit-text-fill-color: #fff !important;
  transition: background-color 9999s ease-out;
}

/* Optional: add a small down-arrow icon (gold accent) */
.event-select {
  position: relative;
}
.event-select::after {
  content: "▾";
  position: absolute;
  right: 14px;
  top: 50%;
  transform: translateY(-50%);
  color: var(--gold);
  pointer-events: none;
  font-size: 1.1rem;
  opacity: .8;
}


/* ===== Table (same palette & header treatment as Manage Testimonies) ===== */
.table-wrap{
  overflow:auto; border-radius:16px;
  background: rgba(255,255,255,.02);
  border:1px solid rgba(255,255,255,.08);
}
table{ width:100%; border-collapse:collapse; min-width:900px; color:var(--ink); }
thead th{
  font-weight:900; text-transform:uppercase; font-size:.95rem; letter-spacing:.06em;
  background: linear-gradient(180deg, rgba(213, 188, 43, 0.9), rgba(169, 161, 120, 0.536));
  color:#111; border-bottom:1px solid rgba(255,255,255,.10);
  padding:1rem .9rem; position:sticky; top:0; z-index:1; backdrop-filter:blur(6px);
}
tbody td{
  padding:.9rem .9rem; font-size:.98rem; vertical-align:top;
  border-bottom:1px solid rgba(255,255,255,.06);
}
tbody tr:hover{ background:rgba(255,255,255,.03); }

/* ===== Empty state (reuse empty-wrap pattern) ===== */
.empty-wrap{
  margin-top: 2.2rem;
  display:grid; gap: .8rem; justify-items:center; text-align:center;
}
.empty-wrap .section-title{ margin: 0 auto .6rem; }
.empty-wrap p{
  color: rgba(255,255,255,.9);
  max-width: 760px; line-height:1.65; font-size:1.02rem; margin:0 auto;
}

/* ===== Sparkles (subtle) ===== */
.sparkle{
  position:fixed; width:3px; height:3px; background: rgba(255,215,0,0.9);
  border-radius:50%; pointer-events:none; z-index:0; animation: sparkleAnim linear infinite;
}
@@keyframes sparkleAnim{ 0%{transform:translateY(0) scale(.5);opacity:0;} 50%{transform:translateY(-25px) scale(1);opacity:1;} 100%{transform:translateY(-50px) scale(.5);opacity:0;} }

/* ===== Responsive ===== */
@@media (max-width:768px){
  .event-select select{ font-size:1rem; padding:.7rem .9rem; }
}
</style>
}

<div class="page-content">
  <!-- Cohesive heading section -->
  <header class="page-head" aria-labelledby="mv-head">
    <h1 id="mv-head">MANAGE VOLUNTEERS</h1>
    <div class="tagline">Admin • Volunteers • Events • Community</div>
    <p class="head-desc">
      View and manage volunteer sign-ups by event. Use the selector to filter the roster and coordinate your teams with clarity.
    </p>
  </header>

  <!-- Section title box -->
  <h2 class="section-title">Volunteer Roster</h2>

  <!-- Glass panel with event selector + table -->
  <div class="glass-panel">
    <div class="controls">
      <div class="event-select">
        <form method="get" asp-action="ManageVolunteers">
          <select name="eventId" onchange="this.form.submit()">
            <option value="">-- Select Event --</option>
            @foreach (var evt in (List<Alabaster.Models.UpcomingEvent>)ViewBag.Events)
            {
              <option value="@evt.Id" selected="@(ViewBag.SelectedEventId == evt.Id ? "selected" : null)">
                @evt.Name (@evt.Date)
              </option>
            }
          </select>
        </form>
      </div>
    </div>

    @if (Model != null && Model.Any())
    {
      <div class="table-wrap">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              @* <th>Notes</th> *@
              <th>Volunteers</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var vol in Model)
            {
              <tr>
                <td>@vol.Name</td>
                <td>@vol.Email</td>
                <td>@vol.Phone</td>
                @* <td>@vol.Notes</td> *@
                <td>@vol.NumberOfVolunteers</td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    }
    else if (ViewBag.SelectedEventId != null)
    {
      <div class="empty-wrap" aria-live="polite">
        <h3 class="section-title">No Volunteers Yet</h3>
        <p>No volunteers are registered for this event yet. Share the sign-up link and check back soon.</p>
      </div>
    }
  </div>
</div>

@section Scripts {
<script>
// subtle sparkles (same cadence)
function createSparkle(){
  const s=document.createElement('div');
  s.className='sparkle';
  s.style.left=Math.random()*window.innerWidth+'px';
  s.style.top=Math.random()*window.innerHeight+'px';
  s.style.width=s.style.height=(Math.random()*3+2)+'px';
  s.style.animationDuration=(5+Math.random()*5)+'s';
  document.body.appendChild(s);
  setTimeout(()=>s.remove(),10000);
}
setInterval(createSparkle, 300);
</script>
}
