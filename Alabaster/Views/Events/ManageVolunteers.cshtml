    padding: 13px 16px;
    text-align: left;
    vertical-align: middle;
    border-bottom: 1px solid rgba(255, 215, 0, 0.15);
}

table tbody tr {
    transition: all 0.3s ease;
}

table tbody tr:hover {
    background: rgba(255, 215, 0, 0.15);
    transform: scale(1.02);
    box-shadow: 0 0 18px rgba(255, 215, 0, 0.3);
}

