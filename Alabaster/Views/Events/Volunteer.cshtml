.btn-alt:hover{ transform:translateY(-1px); box-shadow:0 16px 36px rgba(0,0,0,.38); }
.meta-note{ text-align:center; font-size:.9rem; color:var(--muted); }
</style>
}

<!-- ===== Hero heading + paragraph ===== -->
<section class="hero-title">
  <h1>Volunteer With Us</h1>
  <p>Use your gifts to serve our community. Choose an event and tell us how you‚Äôd like to help ‚Äî we‚Äôll be in touch with the details.</p>
</section>

<div class="page-overlay">
  <div class="volunteer-card">
    <h2 class="page-title">Be Part of the Mission</h2>
    <p class="subtitle">Lend a hand at an upcoming event ‚Äî quick sign-up below.</p>

    <hr class="hr" />

    @if (TempData["Message"] != null)
    {
      <div class="alert-success">@TempData["Message"]</div>
    }

    <form asp-action="Volunteer" method="post" novalidate>
      <div asp-validation-summary="ModelOnly" class="alert-summary"></div>

      <div class="form-grid">
        <!-- Event -->
        <div class="col-span-2">
          <label>Select Event</label>
          <div class="input-wrap">
            <i class="bi bi-calendar-event input-icon"></i>
            <select asp-for="EventId" class="form-control">
              <option value="">-- Select Event --</option>
              @foreach (var evt in (List<Alabaster.Models.UpcomingEvent>)ViewBag.Events)
              {
                <option value="@evt.Id" selected="@(Model.EventId == evt.Id)">
                  @evt.Name (@evt.Date)
                </option>
              }
            </select>
          </div>
          <span asp-validation-for="EventId" class="text-danger"></span>
        </div>

        <!-- Name -->
        <div>
          <label>Name</label>
          <div class="input-wrap">
            <i class="bi bi-person input-icon"></i>
            <input asp-for="Name" class="form-control" placeholder="Your full name" />
          </div>
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div>
          <label>Email</label>
          <div class="input-wrap">
            <i class="bi bi-envelope input-icon"></i>
            <input asp-for="Email" type="email" class="form-control" placeholder="you@example.com" />
          </div>
          <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Phone -->
        <div>
          <label>Phone</label>
          <div class="input-wrap">
            <i class="bi bi-telephone input-icon"></i>
            <input asp-for="Phone" class="form-control" maxlength="10" pattern="\d{10}" placeholder="10-digit number" />
          </div>
          <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <!-- Number of Volunteers -->
        <div>
          <label>Number of Volunteers</label>
          <div class="input-wrap">
            <i class="bi bi-people input-icon"></i>
            <input asp-for="NumberOfVolunteers" type="number" class="form-control" min="1" value="1" />
          </div>
          <span asp-validation-for="NumberOfVolunteers" class="text-danger"></span>
        </div>

        <!-- Notes -->
        <div class="col-span-2">
          <label>Notes / Allergies (Optional)</label>
          <div class="input-wrap">
            <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Allergies, preferred role, time availability, etc."></textarea>
          </div>
          <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
      </div>

      <div class="actions">
        <button type="submit" class="btn-primary">
          <i class="bi bi-send-fill"></i> Submit
        </button>

        <div class="hr-bottom"></div>

        <a class="btn-alt" href="@Url.Action("Index","Events")">
          <i class="bi bi-calendar2-heart"></i> Browse Upcoming Events
        </a>
      </div>
    </form>
  </div>
</div>

@section Scripts {
<script>
/* Floating sparkles */
function createSparkle() {
    const sparkle = document.createElement('div');
    sparkle.classList.add('sparkle');
    sparkle.style.left = Math.random() * window.innerWidth + 'px';
    sparkle.style.top = Math.random() * window.innerHeight + 'px';
    sparkle.style.animationDuration = (2 + Math.random() * 3) + 's';
    document.body.appendChild(sparkle);
    setTimeout(() => sparkle.remove(), 4000);
}
setInterval(createSparkle, 150);
</script>
}
