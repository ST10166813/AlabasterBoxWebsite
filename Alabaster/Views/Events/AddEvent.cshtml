    content: "";
    position: absolute;
    top: 0; left: -75%;
    width: 50%;
    height: 100%;
    background: linear-gradient(120deg, transparent, rgba(255,215,0,0.3), transparent);
    animation: lightSweep 6s infinite linear;
}

/* ===== HEADER ===== */
.add-event-form h2 {
    text-align: center;
    font-size: 2.4rem;
    font-weight: 900;
    letter-spacing: 1px;
    margin-bottom: 2rem;
    text-transform: uppercase;
    background: linear-gradient(90deg, #FFD700, #fff, #FFD700);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-size: 200% auto;
    animation: shimmer 4s linear infinite;
    text-shadow: 0 0 25px rgba(255,255,255,0.4);
}

/* ===== FORM ELEMENTS ===== */
.form-group {
    margin-bottom: 1.5rem;
    animation: fadeIn 1s ease both;
}

.form-group:nth-child(odd) { animation-delay: 0.3s; }
.form-group:nth-child(even) { animation-delay: 0.6s; }

label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #FFD700;
    font-size: 1rem;
}

.form-control, input[type="file"] {
    width: 100%;
    padding: 0.8rem 1rem;
    font-size: 1rem;
    border-radius: 0.5rem;
    outline: none;
    border: 1px solid rgba(255,255,255,0.2);
    background: rgba(0,0,0,0.3);
    color: #fff;
    transition: all 0.3s ease;
}

.form-control:focus, input[type="file"]:focus {
    border-color: #FFD700;
    box-shadow: 0 0 10px rgba(255,215,0,0.4);
}

/* ===== SUBMIT BUTTON ===== */
.btn-submit {
    width: 100%;
    padding: 0.9rem;
    font-size: 1rem;
    font-weight: 800;
    text-transform: uppercase;
    border: none;
    border-radius: 0.6rem;
    color: #000;
    background: linear-gradient(90deg, #FFD700, #FFB700, #FFD700);
    background-size: 200% auto;
    animation: shimmer 5s linear infinite;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 1.5rem;
}

.btn-submit:hover {
    transform: scale(1.05);
    box-shadow: 0 0 25px rgba(255,215,0,0.6);
}

/* ===== ANIMATIONS ===== */
@@keyframes fadeInUp {
    0% { opacity: 0; transform: translateY(40px); }
    100% { opacity: 1; transform: translateY(0); }
}

@@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

@@keyframes shimmer {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
}

@@keyframes lightSweep {
    0% { left: -75%; }
    100% { left: 125%; }
}

/* ===== FLOATING PARTICLES ===== */
.sparkle {
    position: fixed;
    width: 3px;
    height: 3px;
    background: rgba(255,215,0,0.9);
    border-radius: 50%;
    box-shadow: 0 0 8px rgba(255,215,0,0.8);
    pointer-events: none;
    animation: sparkleAnim linear infinite;
    z-index: 1;
}

@@keyframes sparkleAnim {
    0% { transform: translateY(0) scale(0.5); opacity: 0; }
    50% { transform: translateY(-25px) scale(1); opacity: 1; }
    100% { transform: translateY(-50px) scale(0.5); opacity: 0; }
}

@@media (max-width: 768px) {
    .add-event-form h2 { font-size: 1.8rem; }
}
</style>
}

