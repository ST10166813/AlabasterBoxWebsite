@section Styles {
<style>
/* ===== BASE STYLING ===== */
html, body {
    height: 100%;
    margin: 0;
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    color: #fff;
}

body {
    background: url('../images/cross7.png') center -10% / cover no-repeat fixed;
    background-color: #000;
    overflow-x: hidden;
    position: relative;
