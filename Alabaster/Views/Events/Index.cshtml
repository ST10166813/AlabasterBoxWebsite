/* SPARKLES */
.sparkle {
    position: absolute;
    width: 3px;
    height: 3px;
    background: rgba(255, 215, 0, 0.9);
    border-radius: 50%;
    box-shadow: 0 0 8px rgba(255, 215, 0, 0.8);
