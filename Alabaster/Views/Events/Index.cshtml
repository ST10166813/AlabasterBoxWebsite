    <div class="admin-toolbar" role="region" aria-label="Admin actions">
      <a href="@Url.Action("AddEvent", "Events")" class="btn-admin">Add Event</a>
    </div>
  }

  <!-- INTRO -->
  <section class="hero" aria-label="Introduction">
    <p>
